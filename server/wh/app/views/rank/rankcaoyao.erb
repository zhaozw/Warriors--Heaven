<html>
<head>
<meta http-equiv="content-type" content = "text/ html; charset=UTF-8" />
</head>
<style>
.row { width:220px;}
.playername{ float:left;width:100px;border:0px solid red;}
</style>
<script src="/javascripts/jquery-1.3.2.js"></script>
<script>
function rback(){

	// history.back();	
  // history.go(-1);
	// alert("fds");window.location.href=window.location.href;alert("f33ds");
	window.location.href="/rank";
}
</script>
<body style="background:transparent;background-color:transparent;padding:0;margin:0;">
<img src="/images/btn_back.png" onclick="rback();" style="position:absolute;left:6;top:6;z-index:100;width:70px;" />
<div style="position:absolute;left:0;top:0;	">
<div style="background:url(/images/scrolltop.png);width:320px;height:42px;font-size:13pt;text-align:center;">
	
	<div style="margin-top:0px;padding-top:10px;letter-spacing:10px;font-weight:bold;color:#ffff88;">薬草を採集ランキング
	</div>

</div>

<div id="content" style="background:url(/images/scrollbody.png);width:320px;padding:10 50;">
	<% require "rubyutility.rb" %>
	<% index=1 %>
	<% for r in rs %>
	<div class="row">
		<div style="float:left;width:60px;">
			第<%=i_to_ch(index)%>名:
		</div>
		<div style="" class="playername">
			<%=r[:user]%>
		</div>
		<div style="clear:both;"></div>
		<div style="float:right;" class="">
			薬草を採集レベル&nbsp;	<%=r[:level]%> 
		</div>
		<div style="clear:both;"></div>
	</div>
	<% index += 1%>
	<% end %>

</div><!-- content -->
<div style="background:url(/images/scrollbottom.png);width:320px;height:58px;"></div>
</div>
</body>
</html>
<script>
$("#content").height( window.screen.height-170);
$("#content").width(window.screen.width);
$("#content").css("overflow-y", "scroll");
$("#content").css("overflow-x", "hidden");
</script>
