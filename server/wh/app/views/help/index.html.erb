<html>
<body style="background:url(/images/bg_bamboo.png);background-size:320px 44px;">
	<div style="margin:10 20">
	<% if @o.image != nil && @o.image.size>0%>
	<div id="image" style="position:absolute;left:33;top:3;width:50;height:50;">
	<img src="<%=@o.image %>" style="width:50;"/>
	</div> 
	<%end%>
	<div id="name" style="position:absolute;left:100;top:22px;margin:5px;color:#661111;font-weight:bold;">
	<%=@o.dname%>
	</div>

	<div id="desc" style="line-height:22px;position:absolute;left:40;top:68;overflow:scroll;width:243px;">
	<%=@o.desc %>
	</div>
	</div>
</body>
</html>
